<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stego.stego.Page4Controller">
    <children>
        <VBox alignment="CENTER" layoutX="50.0" layoutY="20.0" prefHeight="750.0" prefWidth="1100.0" spacing="20.0">
            <children>
                <BarChart prefHeight="600.0" prefWidth="1100.0" fx:id="barChar" >
                    <xAxis>
                        <CategoryAxis side="BOTTOM" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT" />
                    </yAxis>
                </BarChart>
                <Button mnemonicParsing="false" text="Отрисовать" fx:id="button3"/>
                <Button mnemonicParsing="false" text="Открыть гистограмму в новом окне" fx:id="button1"/>
                <Button mnemonicParsing="false" text="Сохранить гистограмму" fx:id="button2"/>
            </children>
        </VBox>
    </children>
</Pane>
