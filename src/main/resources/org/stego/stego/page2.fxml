<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<Pane prefHeight="768.0" prefWidth="1166.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stego.stego.Page2Controller">
   <children>
      <VBox alignment="CENTER" layoutX="602.0" layoutY="20.0" prefHeight="700.0" prefWidth="400.0" spacing="20.0">
         <children>
            <Slider fx:id="slider1" blockIncrement="0.01" majorTickUnit="5.0" minorTickCount="100" prefHeight="50.0" prefWidth="300.0" showTickLabels="true" showTickMarks="true">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="20.0" />
               </VBox.margin>
            </Slider>
            <TextField fx:id="textField" prefHeight="30.0" prefWidth="300.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <ChoiceBox fx:id="channelChoiceBox" prefWidth="150.0" styleClass="choice-box">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Красный" />
                     <String fx:value="Зелёный" />
                     <String fx:value="Синий" />
                     <String fx:value="Все каналы" />
                  </FXCollections>
               </items>
            </ChoiceBox>
            <Button fx:id="button1" mnemonicParsing="false" onAction="#stegoPlus" text="Вложить текст" />
            <TextArea fx:id="textArea" editable="false" prefHeight="200.0" prefWidth="300.0" wrapText="true" />
            <Button fx:id="button2" mnemonicParsing="false" onAction="#extractF" text="Вывести текст" />
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="89.0" layoutY="20.0" prefHeight="700.0" prefWidth="430.0" spacing="20.0">
         <children>
            <!-- Рамка вокруг изображения 1 -->
            <StackPane prefHeight="302.0" prefWidth="562.0">
               <Rectangle arcHeight="5.0" arcWidth="5.0" fill="TRANSPARENT" height="301.0" stroke="BLACK" strokeWidth="2.0" width="301.0">
                  <StackPane.margin>
                     <Insets right="1.0" />
                  </StackPane.margin></Rectangle>
               <ImageView fx:id="imageView1" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
            </StackPane>
            <!-- Рамка вокруг изображения 2 -->
            <StackPane prefHeight="300.0" prefWidth="300.0">
               <Rectangle arcHeight="5.0" arcWidth="5.0" fill="TRANSPARENT" height="301.0" stroke="BLACK" strokeWidth="2.0" width="301.0">
                  <StackPane.margin>
                     <Insets right="1.0" />
                  </StackPane.margin></Rectangle>
               <ImageView fx:id="imageView2" fitHeight="300.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
            </StackPane>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveImage" text="Сохранить изображение" />
         </children>
      </VBox>
   </children>
</Pane>
